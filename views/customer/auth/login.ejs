<%- include('../../shared/includes/head',{pageTitle:'Login'})  %> 
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    
<%- include('../../shared/includes/header')  %> 
    <main>
        <h1>Login</h1>
        <form action="/login" method="POST">
            <input type="hidden" value="<%= locals.csrfToken %>" name="_csrf">
        <p>
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" value=" " required>
        </p>
        <p>
            <label for="password">Password</label>
            <input type="password" id="password" name="password" minlength="6" value="" required>
        </p>
        
      <button class="btn">Login</button>
      <p id="switch-form">
        <a href="/signup">Create a new user</a>
      </p>
    </form>
    </main>

<%- include('../../shared/includes/footer')  %> 